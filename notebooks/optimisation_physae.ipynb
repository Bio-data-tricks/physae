  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Aper√ßu du param√©trage YAML par d√©faut\nbase_data_cfg = load_data_config()\nbase_stage_A = load_stage_config(\"A\")\nbase_stage_B2 = load_stage_config(\"B2\")\nprint(\"Taille d'entra√Ænement par d√©faut:", base_data_cfg['n_train'])\nprint(\"√âpoques pour la phase A:", base_stage_A['epochs'])\nprint(\"Param√®tres optimis√©s pendant la phase B2:", base_stage_B2['optuna'].keys())"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Construction d'un ensemble r√©duit pour des essais rapides\ndata_overrides = {\n    'n_train': 256,\n    'n_val': 64,\n    'batch_size': 8,\n}\nmodel, train_loader, val_loader = build_data_and_model(config_overrides=data_overrides)"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Entra√Ænement rapide de la phase A avec une configuration YAML personnalis√©e\ntrain_stage_A(\n    model,\n    train_loader,\n    val_loader,\n    config_overrides={'epochs': 5},\n    enable_progress_bar=True,\n)"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Encha√Æner sur la phase B2 avec une configuration pr√©d√©finie\ntrain_stage_B2(\n    model,\n    train_loader,\n    val_loader,\n    config_overrides={'epochs': 5},\n    enable_progress_bar=True,\n)"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Optimisation Optuna de la phase A sur un espace de recherche YAML\nstudy = optimise_stage(\n    'A',\n    n_trials=3,\n    metric='val_loss',\n    data_overrides=data_overrides,\n    stage_overrides={'epochs': 5},\n    show_progress_bar=True,\n)\nprint('Meilleurs hyperparam√®tres:', study.best_params)\nprint('Score associ√©:', study.best_value)"
